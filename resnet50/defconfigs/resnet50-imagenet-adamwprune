# ResNet-50 on ImageNet with AdamWPrune state pruning
# Production configuration for ImageNet-1K dataset

# Model selection
CONFIG_MODEL_RESNET50=y

# Dataset configuration
CONFIG_RESNET50_DATASET="imagenet"
CONFIG_RESNET50_DATA_DIR="/path/to/imagenet"  # Update this path

# Training configuration for ImageNet
CONFIG_RESNET50_BATCH_SIZE=256  # Adjust based on GPU memory
CONFIG_RESNET50_EPOCHS=90
CONFIG_RESNET50_NUM_WORKERS=8
CONFIG_RESNET50_LOG_INTERVAL=100
CONFIG_RESNET50_SAVE_MODEL=y
CONFIG_RESNET50_MONITOR_GPU=y

# Optimizer configuration
CONFIG_OPTIMIZER_ADAMWPRUNE=y
CONFIG_ADAMWPRUNE_BASE_ADAM=y
CONFIG_ADAMWPRUNE_BETA1="0.9"
CONFIG_ADAMWPRUNE_BETA2="0.999"
CONFIG_ADAMWPRUNE_WEIGHT_DECAY="0.0"
CONFIG_ADAMWPRUNE_AMSGRAD=n

# Pruning configuration
CONFIG_PRUNING_STATE=y
CONFIG_TARGET_SPARSITY="0.7"
CONFIG_RESNET50_PRUNING_START_EPOCH=10
CONFIG_RESNET50_PRUNING_END_EPOCH=70

# Learning rate for AdamWPrune
CONFIG_RESNET50_LEARNING_RATE="0.001"