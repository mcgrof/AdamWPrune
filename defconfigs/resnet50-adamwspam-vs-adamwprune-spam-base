# Checkpointing
CONFIG_SAVE_CHECKPOINT=y
CONFIG_CHECKPOINT_INTERVAL=10

# Monitoring
CONFIG_VERBOSE=y
CONFIG_LOG_LEVEL="INFO"
CONFIG_DEBUG=n
CONFIG_PROFILE=n
CONFIG_GPU_MONITOR=y
CONFIG_GPU_SAMPLE_INTERVAL=10

# Test matrix naming
CONFIG_TEST_MATRIX_NAME="resnet50_spam_vs_prune_spam_base"
CONFIG_CONTINUE_ON_ERROR=y

# Other optimizer configs (required but unused)
CONFIG_SGD_MOMENTUM="0.9"
CONFIG_SGD_WEIGHT_DECAY="0.0"
CONFIG_ADAM_BETA1="0.9"
