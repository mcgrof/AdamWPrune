# Memory Optimizations - Less restrictive for 48GB GPU
CONFIG_PYTORCH_CUDA_ALLOC_CONF="expandable_segments:True"

# Checkpointing
CONFIG_SAVE_CHECKPOINT=y
CONFIG_CHECKPOINT_INTERVAL=1000
CONFIG_OUTPUT_DIR="./results/gpt2-adamwspam-vs-adamwprune-50-w7900"

# Experiment Tracking
CONFIG_GPT2_TRACKER="none"
